doctype html
html
	head
		title= title
		meta(charset='UTF-8')
		link(rel='stylesheet', href='/stylesheets/style.css')
		meta(name='baidu_union_verify', content='92f77e32c24287c13098a653aa041cdc')
	body
		header
			h1= title
		nav
			span
				a(title='主页',href='/') 主页
				if	user
					a(title='登出',href='/logout') 登出
					a(title='发表文章',href='/post') 发表文章
				else
					a(title='登陆',href='/login') 登陆
					a(title='注册',href='/reg') 注册
		article
			block    content
			if	success
				div #{success}
			if	error
				div #{error}
